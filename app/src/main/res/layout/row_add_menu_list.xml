<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:id="@+id/ll_menu_item_list"
    android:weightSum="10"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_frg_menuList"
        android:layout_marginStart="@dimen/_5sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_60sdp" />

    <RelativeLayout
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/_12sdp"
            android:text="Cheez pizz"
            android:id="@+id/txt_food_name_menuList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_food_price_menuList"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="$35.00"
            android:layout_below="@+id/txt_food_name_menuList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:padding="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:id="@+id/btn_delete_menu_list"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />
</LinearLayout>
</layout>