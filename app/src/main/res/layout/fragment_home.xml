<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_1sdp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.mealapp.utility.CircularImageView
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/img_profile_pic_profile_frg"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/bg_login"
                            app:border_color="@android:color/white"
                            app:border_width="0.5dp" />

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_70sdp">
                            <TextView
                                android:textStyle="bold"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/orange"
                                android:text="User user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginStart="@dimen/_10sdp"
                                android:textSize="@dimen/_10sdp"
                                android:text="New Delhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_8sdp"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="kjggjgdfkjgkjdfgdgkjfmmdfglhkfmhfgkhfgm,khdfglkdflnlknntdmndtmdddtmjdddddtlkdtjdtijdjkjdtoijdjk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_1sdp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp">
                    <TextView
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:id="@+id/all_product_list"
                        android:text="All Product List"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_below="@+id/all_product_list"
                        android:id="@+id/fr_home_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            </RelativeLayout>
            <FrameLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_circle_white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_minus12sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/down_arrow"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.78"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.48"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.480    "
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_1sdp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:id="@+id/ll_createcourse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:weightSum="1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.05"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.45"
                                android:layout_gravity="center"
                                android:src="@drawable/menu"/>

                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="1010"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="Weekly News Menu's"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.485"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_1sdp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ll_categories"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:weightSum="1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.05"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.45"
                                android:layout_gravity="center"
                                android:src="@drawable/user_multiple"/>

                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="1010"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="Last Week's Users"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.48"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.480"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_1sdp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ll_createquiz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:weightSum="1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.05"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.45"
                                android:layout_gravity="center"
                                android:src="@drawable/dollar_yellow"/>

                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="1010"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="Today's Total Earning"
                                android:textColor="@android:color/black"/>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03"/>


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.480"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_1sdp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:weightSum="1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.05"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.45"
                                android:layout_gravity="center"
                                android:src="@drawable/cart"/>

                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="1010"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="Total order received"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>