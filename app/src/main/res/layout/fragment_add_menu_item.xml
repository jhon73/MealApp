<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp" />

        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_share"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp" />
        
        <FrameLayout
            android:background="@color/transperent_black"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp">
            <RelativeLayout
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_menu_item_name_display"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                android:text="Tibbs Frankie"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/white"
                android:layout_below="@+id/txt_menu_item_name_display"
                android:text="is simple dummy text of the  printing  and typesetting industry."
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:text="$99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

    <EditText
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/square_gray"
        android:id="@+id/edt_menu_item_name"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/square_gray"
        android:id="@+id/edt_menu_item_price"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/square_gray"
        android:id="@+id/edt_menu_item_description"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_add_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/rounded_curv_orange"
        android:gravity="center"
        android:text="Add Item"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp" />
</LinearLayout>
    </ScrollView>
</layout>