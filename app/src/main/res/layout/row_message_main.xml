<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_marginTop="@dimen/_20sdp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rll_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_60sdp">

            <com.mealapp.utility.CircularImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_login" />
            <TextView
                android:layout_marginEnd="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:background="@drawable/ic_circle_msg"
                android:layout_alignParentRight="true"
                android:text="10"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp" />
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/_14sdp"
           android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/rll_image"
            android:textColor="@color/red_message"
            android:text="Nathaniel Barker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="4m"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:text="hello dddhf ajhjkhfs hueloud fahoieajfa khsaffyet hdis shjhfsfi fsjhkjfcba hisuhff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</layout>