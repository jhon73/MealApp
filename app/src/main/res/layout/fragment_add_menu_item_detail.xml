<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txt_item_name_detail"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:text="Veggie Burger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/img_item_detail"
        android:layout_below="@+id/txt_item_name_detail"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp" />

    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:id="@+id/txt_item_price_detail"
        android:layout_below="@+id/img_item_detail"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:text="$95.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textSize="@dimen/_12ssp"
        android:id="@+id/txt_description_item_detail"
        android:layout_below="@+id/txt_item_price_detail"
        android:text="dsflkjhkjhdfghfdk jglhdfjh dfgbkjgh fdjghjdgdgd ffbvbfv bfhjfbhj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@+id/txt_description_item_detail"
        android:id="@+id/view_item_detail"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:gravity="center"
        android:layout_below="@+id/view_item_detail"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">

        <ImageView
            android:id="@+id/btn_delete_menu_item"
            android:layout_marginEnd="@dimen/_50sdp"
            android:src="@drawable/ic_delete"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_50sdp" />

        <ImageView
            android:id="@+id/btn_edit_menu_item"
            android:src="@drawable/edit_icon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp" />

    </LinearLayout>

</RelativeLayout>
    </ScrollView>
</layout>
